@model Dominio.Investimento

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Você tem certeza que deseja excluir?</h3>
<div>
    <h4>Investimento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvestimentoUnico.Nome)
        </dd>
        <dt class = "col-sm-2">
            Valor total
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
        <dt class = "col-sm-2">
            Preço médio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoMedio)
        </dd>
        <dt class = "col-sm-2">
            Quantidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
    
    <form asp-action="Excluir">
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        @Html.ActionLink("Cancelar", "Index")
    </form>
</div>
