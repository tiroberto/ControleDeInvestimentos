@model Dominio.Carteira

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Carteira</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">Investimentos</dt>
        <dl class="col-sm-10">
            @foreach (var investimento in Model.Investimentos)
            {
                <dl class="col-sm-10">
                    <dd class="col-sm-10">
                        Nome: @Html.DisplayFor(item => investimento.InvestimentoUnico.Nome)
                    </dd>
                    <dd class="col-sm-10">
                        Preço médio: @Html.DisplayFor(item => investimento.PrecoMedio)
                    </dd>
                    <dd class="col-sm-10">
                        Valor total: @Html.DisplayFor(item => investimento.ValorTotal)
                    </dd>
                    <dd class="col-sm-10">
                        Quantidade: @Html.DisplayFor(item => investimento.Quantidade)
                    </dd>
                    <dd class="col-sm-10">
                        Tipo do investimento: @Html.DisplayFor(item => investimento.InvestimentoUnico.TipoInvestimento.Nome)
                    </dd>
                </dl>
                <hr />
            }
        </dl>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new { id = @Model.CarteiraId }) |    
    @Html.ActionLink("Adicionar investimento", "AdicionarInvestimento", new { id = Model.CarteiraId }) |
    <a asp-action="Index">Voltar à lista</a>
</div>
