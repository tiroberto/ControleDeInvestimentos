@model Dominio.Carteira

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Carteira</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">Investimentos</dt>
        <dl class="col-sm-10">
            @foreach (var investimento in Model.InvestimentoCarteiras)
            {
                <dl class="col-sm-10">
                    <dd class="col-sm-10">
                        Nome: @Html.DisplayFor(item => investimento.Investimento.Nome)
                    </dd>
                    <dd class="col-sm-10">
                        Preço médio: @Html.DisplayFor(item => investimento.Investimento.PrecoMedio)
                    </dd>
                    <dd class="col-sm-10">
                        Valor total: @Html.DisplayFor(item => investimento.Investimento.ValorTotal)
                    </dd>
                    <dd class="col-sm-10">
                        Quantidade: @Html.DisplayFor(item => investimento.Investimento.Quantidade)
                    </dd>
                    <dd class="col-sm-10">
                        Tipo do investimento: @Html.DisplayFor(item => investimento.Investimento.TipoInvestimento.Nome)
                    </dd>
                </dl>
                <hr />
            }
        </dl>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Editar", new { id = @Model.CarteiraId }) |
    <a asp-action="Index">Voltar à lista</a>
</div>
